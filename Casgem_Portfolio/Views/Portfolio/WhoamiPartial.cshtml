﻿@model List<Casgem_Portfolio.Models.Entities.tbl_about>

@{
    Layout = null;
}


@foreach (var item in Model)
{
    <section class="w3l-index3" id="about">
        <div class="midd-w3 py-5">
            <div class="container py-lg-5 py-md-3">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="position-relative">
                            <img src="~/Templates/alexander-starter/assets/images/80533420.png" alt="" class="radius-image img-fluid">
                        </div>
                    </div>
                    <div class="col-lg-8 mt-lg-0 mt-5">
                        <h5 class="title-small mb-2">Ben Kimim?</h5>
                        <h3 class="title-big">Ben @item.Name &nbsp; @item.Surname, @item.Address</h3>
                        <p class="mt-4">
                            @item.Des
                        </p>
                        <a target="_blank" href="~/Templates/alexander-starter/assets/TunahanÖZKAN-TR.pdf" class="btn btn-style btn-primary mt-lg-5 mt-4">Cv'mi Görüntüle</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

}